load("@npm//@bazel/typescript:index.bzl", "ts_config", "ts_project")
load("@build_bazel_rules_nodejs//:index.bzl", "pkg_npm")
load("@build_bazel_rules_nodejs//internal/js_library:js_library.bzl", "js_library")

SRCS = glob(
    [
        "src/**/*",
    ],
    exclude = ["test*.*"],
)

exports_files(["tsconfig.json"], visibility = ["//visibility:public"])

ts_config(
    name = "tsconfig",
    src = "//packages/kbn-release-notes:tsconfig.json",
    deps = [
        "//:tsconfig.json",
    ],
)

ts_project(
    name = "target",
    declaration = True,
    source_map = True,
    tsconfig = "tsconfig",
    srcs = SRCS,
    args = [],
    deps = [
        "//packages/kbn-dev-utils",
        "@npm//axios",
        "@npm//cheerio",
        "@npm//dedent",
        "@npm//graphql",
        "@npm//graphql-tag",
        "@npm//terminal-link",
        "@npm//markdown-it",
        "@npm//typescript",
        "@npm//tslib",
        "@npm//@types/cheerio",
        "@npm//@types/dedent",
        "@npm//@types/flot",
        "@npm//@types/graphql",
        "@npm//@types/jest",
        "@npm//@types/markdown-it",
        "@npm//@types/node",
        "@npm//@types/react",
        "@npm//jest-styled-components",
        "@npm//@types/testing-library__jest-dom",
    ],
    out_dir = "target",
    root_dir = "src",
)

alias(
    name = "es5",
    actual = "target"
)

filegroup(
    name = "target_types",
    srcs = [":target"],
    output_group = "types",
)

js_library(
    name = "kbn-release-notes",
    srcs = [
        "package.json",
    ],
    deps = [
        ":target",
        ":target_types",
    ],
    package_name = "@kbn/release-notes",
    visibility = ["//visibility:public"],
)

pkg_npm(
    name = "npm_module",
    deps = [
        ":kbn-release-notes",
    ],
    visibility = ["//visibility:public"],
)
