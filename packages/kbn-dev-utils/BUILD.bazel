load("@npm//@bazel/typescript:index.bzl", "ts_project")
load("@build_bazel_rules_nodejs//:index.bzl", "pkg_npm")
load("@build_bazel_rules_nodejs//internal/js_library:js_library.bzl", "js_library")

SRCS = glob(
    [
        "src/**/*.ts",
    ],
    exclude = ["test*.*"],
)

filegroup(
    name = "certs",
    srcs = glob([
        "certs/**/*",
    ]),
)

filegroup(
    name = "tooling_log",
    srcs = glob([
        "tooling_log/**/*",
    ]),
)

exports_files(["tsconfig.json"], visibility = ["//visibility:public"])

ts_project(
    name = "target",
    declaration = True,
    tsconfig = "//packages/kbn-dev-utils:tsconfig.json",
    srcs = SRCS,
    args = [],
    deps = [
        "//packages/kbn-expect",
        "@npm//axios",
        "@npm//chalk",
        "@npm//dedent",
        "@npm//execa",
        "@npm//exit-hook",
        "@npm//getopts",
        "@npm//load-json-file",
        "@npm//moment",
        "@npm//rxjs",
        "@npm//tree-kill",
        "@npm//tslib",
        "@npm//typescript",
        "@npm//chance",
        "@npm//normalize-path",
        "@npm//@types/normalize-path",
        "@npm//@types/dedent",
        "@npm//@types/node",
        "@npm//@types/flot",
        "@npm//@types/jest",
        "@npm//@types/react",
        "@npm//jest-styled-components",
        "@npm//@types/testing-library__jest-dom"
    ],
    extends = ["//:tsconfig.json"],
    declaration_map = True,
    out_dir = "target",
    root_dir = "src",
)

alias(
    name = "es5",
    actual = "target"
)

filegroup(
    name = "target_types",
    srcs = [":target"],
    output_group = "types",
)

js_library(
    name = "kbn-dev-utils",
    srcs = [
        "package.json",
        ":certs",
        ":tooling_log"
    ],
    deps = [
        ":target",
        ":target_types",
    ],
    package_name = "@kbn/dev-utils",
    visibility = ["//visibility:public"],
)

pkg_npm(
    name = "npm_module",
    deps = [
        ":kbn-dev-utils",
    ],
    visibility = ["//visibility:public"],
)
